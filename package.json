{
    "name": "colonizer",
    "displayName": "Colonizer",
    "description": "An extension to add colons or anything you want at the end of a line",
    "version": "0.0.1",
    "publisher": "UriBerman",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.colonize"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [{
            "command": "extension.colonize",
            "title": "Colonize"
        }, {
            "command": "extension.colonizeAndBreakLine",
            "title": "Colonize and Break Line"
        }],
        "configuration": {
            "title": "Colonizer configuration",
            "properties": {
                "colonizer.value": {
                    "type": "string",
                    "default": ";",
                    "description": "The value to be appended at the end of the line"
                }
            }
        },
        "keybindings":[
            {
                "command": "extension.colonize",
                "key": "ctrl+;"
            },
            {
                "command": "extension.colonizeAndBreakLine",
                "key": "alt+;"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}